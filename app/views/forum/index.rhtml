<h1>Forum</h1>
	
<% if @posts.size > 0 %>
  <div><%= link_to 'New post' , :action => 'post' %></div><br/>
	<%= display_as_threads @posts %>
<% else %>
	<%= 'There are no posts.' %>
	<%= link_to 'Be the first one to post here' , :action => 'post' %>
<% end %>
<br/>

<%= link_to 'Previous page' , { :page => @post_pages.current.previous } if @post_pages.current.previous %>
<%= link_to 'Next page' , { :page => @post_pages.current.next } if @post_pages.current.next %> 
